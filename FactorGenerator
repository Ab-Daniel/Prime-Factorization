
public class FactorGenerator 
{
	FactorGenerator(int anInt)
	{
		number = anInt;
	}
	
	public void nextFactor()
	{
		factor  = 2;
		
		do
		{
			
			
			if (number % factor == 0)
			{
				number = number%factor;
				System.out.println(factor + " ");
				
			}
			
			else if(number % factor != 0)
			{
				factor++;
			}
			
			factor++;
			
		} while (factor <= number); /*(factor < number)*/
		
		return;
	}
	
	//private void hasMoreFactors
	
	//private boolean factorReturning;
	
	private int number;
	
	private int factor;
	
}
